<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#25cbea">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:background="@drawable/logo2"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_email_24"/>
        <EditText
            android:id="@+id/txtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+Email"
            android:textSize="18dp"
            android:paddingTop="20dp"
            android:textColor="#816558"
            android:textColorHint="#816558"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/key"/>

        <EditText
            android:id="@+id/txtpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+Password"
            android:textSize="18dp"
            android:textColor="#816558"
            android:textColorHint="#816558"

            />
        </LinearLayout>
        <Button
            android:id="@+id/btnlognin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#005e9c"
            android:textSize="18dp"
            android:layout_marginTop="30dp"

            android:text="sign up"

            android:layout_gravity="center"/>
        <TextView
            android:layout_marginTop="13dp"
            android:id="@+id/btnadacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21dp"
            android:textColor="#816558"
            android:text="Create Account"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">
            <LinearLayout

                android:layout_width="150dp"
                android:layout_height="50dp"
                android:orientation="vertical">
                <Button
                    android:gravity="center"
                    android:id="@+id/btnfb"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#005e9c"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:text="Facebook"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btngg"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    android:backgroundTint="#005e9c"
                    android:text="google"
                    android:textSize="15dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>